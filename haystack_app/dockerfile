FROM --platform=$BUILDPLATFORM ubuntu AS builder

WORKDIR /service
COPY . /service

RUN apt update && apt-get install python3 python3-pip -y
RUN apt install build-essential -y
RUN pip3 install pip3 --upgrade
RUN pip3 install -r requirements.txt -y

# 환경변수
ENV FLASK_APP app.py
ENV FLASK_RUN_PORT 7777
ENV FLASK_RUN_HOST 0.0.0.0

EXPOSE 7777

# 구동 명령
ENTRYPOINT ["flask", "run"]